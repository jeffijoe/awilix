{
  "exclude": ["node_modules", "lib"],
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./lib",
    "strict": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "target": "es6",
    "module": "Node12",
    "moduleResolution": "node",
    "importHelpers": false,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6", "es7"]
  }
}
